@model InventoryManagement.DataAccess.Models.Sale

@{
    ViewData["Title"] = "Delete Sales";
}

<h1 class="text-primary">Delete Sales</h1>
<h3>Are you sure you want to delete this?</h3>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SaleProduct)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SaleProduct)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SaleQuantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SaleQuantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SaleDate)
        </dt>
        <dd class="col-sm-10">
            @Model.SaleDate.ToString("dd/MM/yy")
        </dd>
    </dl>
    
    <form asp-action="RemoveSales">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-primary" asp-action="DisplaySales">Cancel</a>
    </form>
</div>

