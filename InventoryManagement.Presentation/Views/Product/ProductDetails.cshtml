@model InventoryManagement.DataAccess.Models.Product

@{
    ViewData["Title"] = "ProductDetails";
}

<h1>Product Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayName("Product Name")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Product Quantity")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductQuantity)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="UpdateProduct" asp-route-id="@Model?.Id">Edit</a>
    <a class="btn btn-danger" asp-action="DisplayProduct">Cancel</a>
</div>
