@model IEnumerable<InventoryManagement.DataAccess.Models.Purchase>

@{
    ViewData["Title"] = "Display Purchases";
}

<div class="d-flex justify-content-between align-items-center mb-5">
    <h1 class="text-primary">Purchase List</h1>
    <p class="d-flex">
        <a class="btn btn-info me-2" asp-action="CreatePurchase" asp-controller="Purchase">Purchase Product</a>
        <a class="btn btn-success" asp-action="ExportToPdf" asp-controller="Purchase">Download Report</a>
    </p>
</div>

<table class="table table-bordered text-center ">
    <thead>
        <tr class="bg-secondary text-white">
            <th>
                @Html.DisplayName("Product Name")
            </th>
            <th>
                @Html.DisplayName("Product Quantity")
            </th>
            <th>
                @Html.DisplayName("Purchase Date")
            </th>
            <th>
                @Html.DisplayName("Actions")
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PurchaseProduct)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PurchaseQuantity)
                </td>
                <td>
                    @{
                        string purchaseDate = Convert.ToDateTime(item.PurchaseDate).ToString("dd/MM/yyyy");
                    }
                    @purchaseDate

                </td>
                <td>
                    <a class="btn btn-primary" asp-action="UpdatePurchase" asp-controller="Purchase" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-success" asp-action="PurchaseDetails" asp-controller="Purchase" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-danger" asp-action="DeletePurchase" asp-controller="Purchase" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
